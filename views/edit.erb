<% if @show %>
  <form action="/<%= @show.id %>" method="post" id="edit">
    <input type = "hidden" name="_method" value="put">
    <textarea name="band"><%=h @show.band %></textarea>
    <textarea name="zipcode"><%=h @show.zipcode%></textarea>
    <textarea name="venue"><%=h @show.venue%></textarea>
    <textarea name="description"><%=h @show.description%></textarea>
    <input type="submit" value="Submit changes">
  </form>
  <p><a href="/<%= @show.id %>/delete">Delete</a></p>
<% else %>
  <p>Show not found.</p>
<% end %>

<p>
  Post a show:
</p>
<section id="add">
  <form action="/shows" method="post">
    <textarea name="band" placeholder="What's your band called&hellip;"></textarea>
    <textarea name="zipcode" placeholder="Show's zip code&hellip;"></textarea>
    <textarea name="venue" placeholder="Venue name&hellip;"></textarea>
    <input id="date" type="date" name="date">
    <textarea name="description" placeholder="Tell your fans about the show&hellip;"></textarea>
    <input type="submit" value="Post Show!">
  </form>
</section>

<p>
  Find a show:
</p>
<section id="add">
  <form action="/find" method="post">
    <textarea name="user_zip" placeholder="What's your zip code?"></textarea>
    <input type="submit" value="Find a show">
  </form>
</section>


<% @shows.sort_by{ |show| show.date }.each do |show| %>
  <article>
    <p>Artist:
      <%=h show.band%>
    </p>
    <p>Date:
      <%=h show.date%>
    </p>
    <p>Venue:
      <%=h show.venue %>
    </p>
    <p>
      <%=h show.description %>
    </p>
    <p>
      <span><a href="/<%= show.id %>">[edit]</a></span>
    </p>
  </article>
<% end %>
